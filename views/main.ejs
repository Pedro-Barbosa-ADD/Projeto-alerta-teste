<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AssetManager - Principal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">
    <script>
        window.BACKEND_URL = '<%= BACKEND_URL %>';
        window.AUTH_TOKEN = '<%= token %>';
    </script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <i class="bi bi-tv me-2"></i>
                Asset Manager
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="nav-link">Bem-vindo, <%= user.name %></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="content-wrapper">
        <div class="sidebar">
            <div class="sidebar-header-select pt-2" id="sidebar-header-select">
                <select class="form-select form-select-sm" aria-label="Small select example" id="customerSelect">
                    <% customer?.forEach(function(c, index) { %>
                        <option value="<%= c.customer_id %>" <%=index===0 ? 'selected' : '' %>><%= c.customer_name %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <div class="sidebar-header" id="sidebar-header">
                <h6 class="text-white mb-0 ">Canais</h6>
            </div>
            <div class="channels-list" id="sidebar-channels-list">
                <% if (channels && channels.length> 0) { %>
                    <% channels.forEach(function(channel) { %>
                        <div class="card channel-card" data-feed-id="<%= channel.feed_id %>">
                            <% if (channel.detail && channel.detail.media && channel.detail.media.preview_image) { %>
                                <img src="<%= channel.detail.media.preview_image.replace('_%s', '_384x216') %>"
                                    class="card-img-top " alt="<%= channel.name %>">
                                <% } else { %>
                                    <div class="card-img-top  d-flex align-items-center justify-content-center"
                                        style="height: 80px; background-color: black;">
                                        <span class="text-white">
                                            <%= channel.feed_code %>
                                        </span>
                                    </div>
                                    <% } %>
                                        <div class="card-body" data-user-id="<%= channel.name %>"
                                            data-value="<%= channel.detail.live_url %>">
                                            <p class="card-text">
                                                <%= channel.name %>
                                            </p>
                                        </div>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <div class="text-white">Nenhum canal disponível</div>
                                <% } %>
            </div>
        </div>

        <div class="main-content">
            <div class="row content-header justify-content-between">
                <div class="col-md-3 align-items-center">
                    <h6 class="channel-name" id="selectedChannelName">Selecione um canal</h6>
                </div>
                <div id='button-live' class="col-md-auto align-items-center">
                    <button class="btn btn-outline-light btn-live">
                        Live
                    </button>
                </div>
            </div>

            <div class="row content-search">
                <div class="col-md-3 align-items-center">

                </div>
                <div class="col-md-6 align-items-center">
                    <div class="search-container me-3">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" id="searchInput" placeholder="Pesquisar vídeos...">
                            <button class="btn btn-primary" type="button" id="searchButton">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-auto align-items-center">
                    <div class="view-toggle btn-group btn-group-sm ">
                        <button class="btn btn-outline-primary " id="listViewBtn" title="Visualização em lista">
                            <i class="bi bi-list-ul"></i>
                        </button>
                        <button class="btn btn-outline-primary " id="cardsViewBtn" title="Visualização em cards">
                            <i class="bi bi-grid-3x3-gap"></i>
                        </button>
                    </div>

                </div>
            </div>

            <div class="content-assets" id="content-assets">
                <div class="col-md-2 filter-content" id="filter-content">
                    <h6 class="text-white text-center">Quick Filters</h6>
                    <hr>
                    <h6 class="text-white text-center">Types</h6>
                    <!-- Os tipos de mídia serão adicionados dinamicamente aqui -->
                </div>
                <div class="col-md-10 asset-list list-view" id="assetList">
                    <div class="asset-grid" id="assetGrid">
                        <!-- Os assets serão inseridos aqui via JavaScript -->
                    </div>
                </div>
            </div>

            <div class="content-footer">
                <nav aria-label="Navegação de páginas">
                    <ul class="pagination justify-content-center mb-0" id="pagination">
                        <!-- A paginação será inserida aqui via JavaScript -->
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="offcanvas offcanvas-end offcanvas-40" tabindex="-1" id="assetOffcanvas"
        aria-labelledby="assetOffcanvasLabel">
        <div class="offcanvas-header">
            <h6 id="assetOffcanvasLabel" class="offcanvas-title">Asset Details</h6>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Fechar"></button>
        </div>
        <div class="offcanvas-body">
            <div id="assetPlayerContainer" class="d-flex flex-column justify-content-center pb-3">
                <video id="assetPlayer" class="w-100" style="max-width: 480px;">
                    <source id="assetVideoSource" src="" type="application/x-mpegURL">
                    Seu navegador não suporta o elemento de vídeo.
                </video>
                <div class="progress-container">
                    <div class="segment-markers" id="segmentMarkers"></div>
                    <div class="progress-bar" id="progressBar">
                        <div class="progress-fill" id="progressFill">
                            <div class="progress-cursor"></div>
                        </div>
                    </div>
                    <div class="time-tooltip" id="timeTooltip">00:00:00:00</div>
                </div>
                <div class="player-controls bg-dark p-2 mt-2" style="max-width: 480px;">
                    <div class="d-flex align-items-center gap-1">
                        <button class="btn btn-sm btn-outline-light" id="backward10Frames" title="Retroceder 10 frames">
                            <i class="bi bi-skip-backward-circle" style="font-size: 18px;"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="backward1Frame" title="Retroceder 1 frame">
                            <i class="bi bi-skip-start-circle" style="font-size: 18px;"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="backward10Secs" title="Retroceder 10 segundos">
                            <i class="bi bi-skip-backward" style="font-size: 18px;"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="backward1Sec" title="Retroceder 1 segundo">
                            <i class="bi bi-skip-start" style="font-size: 18px;"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="playPauseBtn" title="Play/Pause">
                            <i class="bi bi-play-fill" style="font-size: 22px;"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="forward1Sec" title="Avançar 1 segundo">
                            <i class="bi bi-skip-end" style="font-size: 18px;"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="forward10Secs" title="Avançar 10 segundos">
                            <i class="bi bi-skip-forward" style="font-size: 18px;"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="forward1Frame" title="Avançar 1 frame">
                            <i class="bi bi-skip-end-circle" style="font-size: 18px;"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="forward10Frames" title="Avançar 10 frames">
                            <i class="bi bi-skip-forward-circle" style="font-size: 18px;"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-light" id="muteBtn" title="Mudo">
                            <i class="bi bi-volume-up-fill" style="font-size: 18px;"></i>
                        </button>
                        <input type="range" class="form-range mx-2" id="volumeSlider" min="0" max="100" value="100"
                            style="width: 100px;">
                        <span class="text-white" id="timeDisplay" style="font-family: monospace;">00:00:00:00 /
                            00:00:00:00</span>
                    </div>
                </div>
            </div>
            <ul class="nav  nav-underline nav-fill" id="assetTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="details-tab" data-bs-toggle="tab" href="#details"
                        role="tab">Details</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="quality-checks-tab" data-bs-toggle="tab" href="#quality-checks"
                        role="tab">Quality Checks</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="segments-tab" data-bs-toggle="tab" href="#segments" role="tab">Segments</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="availability-tab" data-bs-toggle="tab" href="#availability"
                        role="tab">Availability</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="technical-details-tab" data-bs-toggle="tab" href="#technical-details"
                        role="tab">Technical Details</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="metadata-tab" data-bs-toggle="tab" href="#metadata" role="tab">Metadata</a>
                </li>
            </ul>
            <div class="tab-content" id="assetTabContent">
                <div class="tab-pane fade show active" id="details" role="tabpanel">
                    <div id="assetDetails"></div>
                </div>
                <div class="tab-pane fade" id="quality-checks" role="tabpanel">
                    <div id="qualityChecks"></div>
                </div>
                <div class="tab-pane fade" id="segments" role="tabpanel">
                    <div id="assetSegments"></div>
                </div>
                <div class="tab-pane fade" id="availability" role="tabpanel">
                    <div id="assetAvailability"></div>
                </div>
                <div class="tab-pane fade" id="technical-details" role="tabpanel">
                    <div id="technicalDetails"></div>
                </div>
                <div class="tab-pane fade" id="metadata" role="tabpanel">
                    <div id="assetMetadata"></div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
    <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/meetecho/janus-gateway/html/janus.js"></script>
    <script src="/js/smpte-timcode.js"></script>
    <script src="/js/playerControls.js"></script>
    <script src="/js/playJanus.js"></script>
    <script src="/js/scripts.js"></script>

    <div id="overlay">
        <div id="popup">
            <button id="close-btn" onclick="closePopup()">X</button>
            <video id="video" controls autoplay></video>
        </div>
    </div>
</body>

</html>